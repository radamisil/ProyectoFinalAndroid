<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:attrs="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:clipChildren="false"
            android:clipToPadding="false">

        <ImageView
                android:id="@+id/ivPlaceIcon"
                android:layout_width="@dimen/dimen_place_icon"
                android:layout_height="@dimen/dimen_place_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPlaceName"
                app:layout_constraintBottom_toBottomOf="@id/tvPlaceName"
                tools:src="@drawable/ic_location"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceName"
                tools:text="Nombre del lugar"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_semibold"
                style="@style/style_texts_titles"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintLeft_toRightOf="@id/ivPlaceIcon"
                app:layout_constraintRight_toRightOf="parent"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbStars"
                style="@style/RatingBarStyle"
                android:scaleY="0.7"
                android:scaleX="0.7"
                android:transformPivotX="0dp"
                android:transformPivotY="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
                android:layout_marginVertical="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceRating"
                app:layout_constraintRight_toRightOf="@id/rbStars"
                app:layout_constraintTop_toTopOf="@id/rbStars"
                app:layout_constraintBottom_toBottomOf="@id/rbStars"
                android:layout_marginEnd="15dp"
                tools:text="5.0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rbStars"
                tools:text="Dirección 1234"
                android:lines="2"
                android:ellipsize="end"
                style="@style/style_regular_texts"
                android:layout_marginVertical="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<View
            android:id="@+id/vDividerTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>-->

    <LinearLayout
            android:id="@+id/llPromotionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvTitlePromotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¡Promociones!"
                    style="@style/TitlesStyles"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/tvTitlePromotions"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clContainerPromotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circle_orange_with_border"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="22dp"
                    android:padding="12dp"
                    android:clipChildren="false">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_promo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPromotions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey"
                android:layout_marginVertical="10dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4 pintas "
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:layout_weight="4"
                    style="@style/style_regular_texts"/>

            <TextView
                    android:id="@+id/tvPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="$150"
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/style_texts_titles"/>
        </LinearLayout>-->

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_que_tan_lleno_esta_este_lugar"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                style="@style/TitlesStyles"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        <LinearLayout
                android:id="@+id/llContainerNoAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este lugar aún no tiene reseñas, \¡registra la primera!"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorPrimary"
                    android:text="¡Dar mi reporte!"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/llContainerAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="5"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_human"
                        android:id="@+id/ivAvailabilityHuman"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:layout_weight="5">

                    <!--<TextView
                            android:id="@+id/tvAvailabilityHumanQuantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="40%"
                            android:textColor="@color/colorGreen"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bg_rounded_green_border"
                            style="@style/style_texts_titles"/>-->

                    <TextView
                            android:id="@+id/tvAvailabilityHuman"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            tools:text="BAJA"
                            android:background="@drawable/bg_green_rounded"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            style="@style/style_texts_titles"/>
                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGrey"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="5"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_robot"
                        android:id="@+id/ivAvailabilityAI"/>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:orientation="horizontal"
                              android:layout_weight="5">

                    <!--<TextView
                            android:id="@+id/tvAvailabilityAIQuantity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="60%"
                            android:textColor="@color/colorAccent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/bg_rounded_orange_border"
                            style="@style/style_texts_titles"/>-->

                    <TextView
                            android:id="@+id/tvAvailabilityAI"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            tools:text="MEDIA"
                            android:background="@drawable/bg_orange_rounded"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            style="@style/style_texts_titles"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToReport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:fontFamily="@font/opensans_regular"
                    android:text="¿Vos cómo lo ves? ¡Dar mi reporte!"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    app:backgroundTint="@color/colorAccent"
                    app:cornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concurrencia por día"
                android:padding="8dp"
                style="@style/TitlesStyles"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

            <!--<com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"/>-->

            <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vpPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"/>

            <com.rd.PageIndicatorView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vpPieChart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:piv_selectedColor="@color/colorGreyDark"
                    app:piv_unselectedColor="@color/colorLightGrey"
                    app:piv_viewPager="@id/vpPieChart"
                    attrs:piv_radius="2dp"
                    app:piv_animationType="swap"/>
        </RelativeLayout>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:textSize="15sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>