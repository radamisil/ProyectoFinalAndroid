<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:clipChildren="false"
            android:clipToPadding="false">

        <ImageView
                android:id="@+id/ivPlaceIcon"
                android:layout_width="@dimen/dimen_place_icon"
                android:layout_height="@dimen/dimen_place_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPlaceName"
                app:layout_constraintBottom_toBottomOf="@id/tvPlaceName"
                tools:src="@drawable/ic_location"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceName"
                tools:text="Nombre del lugar"
                android:lines="1"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_semibold"
                style="@style/style_texts_titles"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintLeft_toRightOf="@id/ivPlaceIcon"
                app:layout_constraintRight_toRightOf="parent"/>

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbStars"
                style="@style/RatingBarStyle"
                android:scaleY="0.7"
                android:scaleX="0.7"
                android:transformPivotX="0dp"
                android:transformPivotY="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
                android:layout_marginVertical="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceRating"
                app:layout_constraintRight_toRightOf="@id/rbStars"
                app:layout_constraintTop_toTopOf="@id/rbStars"
                app:layout_constraintBottom_toBottomOf="@id/rbStars"
                android:layout_marginEnd="15dp"
                tools:text="5.0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvPlaceAddress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rbStars"
                tools:text="Dirección 1234"
                android:lines="2"
                android:ellipsize="end"
                style="@style/style_regular_texts"
                android:layout_marginVertical="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué tan lleno está?"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="8dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_human"
                    android:id="@+id/ivAvailabilityHuman"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cerca de 4 personas votaron:"
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:layout_weight="4"/>

            <TextView
                    android:id="@+id/tvAvailabilityHuman"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="BAJO"
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey"
                android:layout_marginVertical="10dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_robot"
                    android:id="@+id/ivAvailabilityAI"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Según las fotos enviadas por nuestros usuarios, \nla concurrencia es: "
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:layout_weight="4"/>

            <TextView
                    android:id="@+id/tvAvailabilityAI"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MEDIA"
                    android:textColor="@color/colorGreyDark"
                    android:gravity="center"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToReport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:fontFamily="@font/opensans_regular"
            android:text="¿Vos cómo lo ves? ¡Dar mi reporte!"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concurrencia por horarios"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLighterDarkGrey"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:textSize="15sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>