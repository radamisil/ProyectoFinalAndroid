<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_light_rounded"
              android:clipChildren="false"
              android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageView
                android:id="@+id/ivPlaceImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_grey_rounded_top"
                android:layout_margin="15dp"/>

        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/dimen_progress_bar"
                android:layout_height="@dimen/dimen_progress_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clContainerPromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_orange_with_border"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="22dp"
                android:padding="12dp"
                android:clipChildren="false">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_promo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

            <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

            <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivIcon"
                    android:layout_toRightOf="@+id/ivIcon"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="5dp"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp"
                    tools:text="Name"/>

            <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Address"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/colorGrey"
                    android:layout_below="@+id/ivIcon"
                    android:lines="2"
                    android:ellipsize="end"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/texto_que_tan_lleno_esta_este_lugar"
                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textSize="16sp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>

            <LinearLayout
                    android:id="@+id/llContainerNoAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Este lugar aún no tiene reseñas, \¡registra la primera!"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/colorAccent"
                        android:textColor="@color/colorPrimary"
                        android:text="¡Dar mi reporte!"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llAvailabilityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="5"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_human"
                            android:id="@+id/ivAvailabilityHuman"/>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_weight="5">

                        <TextView
                                android:id="@+id/tvAvailabilityHumanQuantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="40%"
                                android:textColor="@color/colorGreen"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/bg_rounded_green_border"
                                style="@style/style_texts_titles"/>

                        <TextView
                                android:id="@+id/tvAvailabilityHuman"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="BAJA"
                                android:background="@drawable/bg_green_rounded"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:layout_weight="1"
                                style="@style/style_texts_titles"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="5"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_robot"
                            android:id="@+id/ivAvailabilityAI"/>

                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_weight="5">

                        <TextView
                                android:id="@+id/tvAvailabilityAIQuantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="60%"
                                android:textColor="@color/colorAccent"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:background="@drawable/bg_rounded_orange_border"
                                style="@style/style_texts_titles"/>

                        <TextView
                                android:id="@+id/tvAvailabilityAI"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="MEDIA"
                                android:background="@drawable/bg_orange_rounded"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:layout_weight="1"
                                style="@style/style_texts_titles"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="15dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="2dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="Volver"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSeeMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorPrimary"
                    android:text="Ver más"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>